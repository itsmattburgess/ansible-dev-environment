worker_processes  1;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    sendfile        on;

    client_body_temp_path /tmp/nginx/;

    server {
      listen 80;
      server_name "~^(?<subdomain>.+)\.dev$";

      root /Users/{{ ansible_user }}/Sites/$subdomain;
    }
}
